<h2>先生　新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "teacher_users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "Eメール" %>
  </div>

  <div class="field">
    <%= f.label :password, "パスワード（6文字以上）" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "パスワード再入力" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

    <div class="field">
    <%= f.label :last_name_t_j, "先生の名前（名字）" %><br />
    <%= f.text_field :last_name_t_j, class: :form__text, placeholder:"例) 山田" %>
  </div>

  <div class="field">
    <%= f.label :first_name_t_j, "先生の名前（名前）" %><br />
    <%= f.text_field :first_name_t_j, class: :form__text, placeholder:"例) 花子" %>
  </div>

  <div class="field">
    <%= f.label :last_name_t_k, "先生の名前（名字・カナ）" %><br />
    <%= f.text_field :last_name_t_k, class: :form__text, placeholder:"例) ヤマダ" %>
  </div>

  <div class="field">
    <%= f.label :first_name_t_k, "先生の名前（名前・カナ）" %><br />
    <%= f.text_field :first_name_t_k, class: :form__text, placeholder:"例) ハナコ" %>
  </div>

    <div class="field">
    <%= f.label :class_t_id, "クラス名" %><br />
    <%= f.text_field :class_t_id, class: :form__text, placeholder:"例) たんぽぽ" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

